{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "rootDir": "..",
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": {
      "@event-pipeline/shared": [
        "packages/shared/src/index.ts"
      ],
      "@event-pipeline/shared/*": [
        "packages/shared/src/*"
      ]
    },
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./dist",
    "../node_modules"
  ]
}

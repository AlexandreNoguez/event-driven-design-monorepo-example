# api-gateway (local)
API_GATEWAY_PORT=3000

# Auth
API_GATEWAY_AUTH_DEV_BYPASS=false
KEYCLOAK_INTERNAL_URL=http://localhost:8080
KEYCLOAK_REALM=event-pipeline
KEYCLOAK_CLIENT_ID=user-web
API_GATEWAY_KEYCLOAK_TIMEOUT_MS=10000
JWT_ISSUER_URL=http://localhost:8080/realms/event-pipeline
JWT_AUDIENCE=
JWT_JWKS_URL=http://localhost:8080/realms/event-pipeline/protocol/openid-connect/certs
JWT_JWKS_CACHE_TTL_MS=300000
JWT_JWKS_FETCH_TIMEOUT_MS=5000

# RabbitMQ (commands)
RABBITMQ_URL=amqp://event:event@localhost:5672
RABBITMQ_EXCHANGE_EVENTS=domain.events
RABBITMQ_EXCHANGE_COMMANDS=domain.commands
RABBITMQ_MANAGEMENT_API_URL=http://localhost:15672/api
RABBITMQ_MANAGEMENT_USER=event
RABBITMQ_MANAGEMENT_PASSWORD=event
RABBITMQ_VHOST=/
API_GATEWAY_RABBITMQ_MANAGEMENT_TIMEOUT_MS=5000

# MinIO (presigned upload)
MINIO_ENDPOINT=localhost
MINIO_API_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET_UPLOADS=uploads
S3_REGION=us-east-1
UPLOAD_SERVICE_OBJECT_KEY_PREFIX=raw
API_GATEWAY_UPLOAD_PRESIGNED_EXPIRES_SECONDS=900
API_GATEWAY_UPLOAD_MAX_SIZE_BYTES=20971520
API_GATEWAY_ALLOWED_MIME_TYPES=image/png,image/jpeg,image/webp,application/pdf

# projection-service (local)
PROJECTION_SERVICE_PORT=3001

DATABASE_URL=postgresql://postgres:postgres@localhost:5432/event_pipeline
RABBITMQ_URL=amqp://event:event@localhost:5672
RABBITMQ_EXCHANGE_EVENTS=domain.events

PROJECTION_SERVICE_QUEUE=q.projection
PROJECTION_SERVICE_PREFETCH=50
PROJECTION_SERVICE_CONSUMER_NAME=projection:events
PROJECTION_SERVICE_OUTBOX_POLL_INTERVAL_MS=2000
PROJECTION_SERVICE_OUTBOX_BATCH_SIZE=50
PROJECTION_SERVICE_OUTBOX_MAX_PUBLISH_ATTEMPTS=5
PROJECTION_PROCESS_MANAGER_SHADOW_ENABLED=true
PROJECTION_PROCESS_MANAGER_PUBLISH_TERMINAL_EVENTS=true
PROJECTION_PROCESS_MANAGER_SHADOW_CONSUMER_NAME=process-manager:shadow
PROJECTION_PROCESS_MANAGER_TIMEOUT_MS=300000
PROJECTION_PROCESS_MANAGER_TIMEOUT_SWEEP_INTERVAL_MS=10000

# audit-service (local)
AUDIT_SERVICE_PORT=3007

# Infra compartilhada
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/event_pipeline
RABBITMQ_URL=amqp://event:event@localhost:5672

# Consumer
AUDIT_SERVICE_QUEUE=q.audit
AUDIT_SERVICE_PREFETCH=100
AUDIT_SERVICE_CONSUMER_NAME=audit:events

# Resumo do payload no audit log
AUDIT_SERVICE_PAYLOAD_SUMMARY_MAX_DEPTH=3
AUDIT_SERVICE_PAYLOAD_SUMMARY_MAX_ARRAY_ITEMS=10
AUDIT_SERVICE_PAYLOAD_SUMMARY_MAX_STRING_LENGTH=200
